<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RailTrack.StationBoardPage">
	<StackLayout 
		Orientation="Vertical"
		Padding="20"
		Spacing="4" >
		<!-- add station edit fields here -->
		<Label Text="{Binding Station.Name, StringFormat='from: {0:N}'}" FontSize="22" FontAttributes="Bold" />
		<Label Text="{Binding Station.Name, StringFormat='				to:     {0:N}'}" FontSize="22" FontAttributes="Bold" />
		<Label Text="{Binding LastUpdated}" FontSize="12" />
		<ListView ItemsSource="{Binding Services}" >
			<ListView.ItemTemplate>
     			<DataTemplate>
					<TextCell Text="{Binding Details}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>